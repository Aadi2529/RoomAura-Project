<% layout("layouts/boilerplate.ejs") %>


<div class="container my-5">

  <!-- Title & Actions -->
  <div class="row mb-4">
    <div class="col-lg-10 offset-lg-1 d-flex justify-content-between align-items-center">
      <h2 class="fw-bold"><%= listing.title %></h2>
      <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
      <div>
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark me-2">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
          <button class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
      <% } %>
      </div>
    </div>
  </div>

  <!-- Image Grid -->
  <div class="row mb-4 g-2">
    <div class="col-lg-6">
      <img src="<%= listing.image.url %>" class="img-fluid rounded-3 w-100 h-100" style="object-fit: cover;">
    </div>
    <div class="col-lg-6">
      <div class="row g-2">
        <div class="col-6">
          <img src="<%= listing.image.url %>" class="img-fluid rounded-3">
        </div>
        <div class="col-6">
          <img src="<%= listing.image.url %>" class="img-fluid rounded-3">
        </div>
        <div class="col-6">
          <img src="<%= listing.image.url %>" class="img-fluid rounded-3">
        </div>
        <div class="col-6 position-relative">
          <img src="<%= listing.image.url %>" class="img-fluid rounded-3">
          <button class="btn btn-light position-absolute bottom-0 start-50 translate-middle-x shadow-sm">Show all photos</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Listing Info -->
  <div class="row mb-5">
    <div class="col-lg-8 offset-lg-1">
      <h5 class="fw-semibold mb-2">
        <%= listing.location %>, <%= listing.country %></h5>
        <p class="text-muted">Hosted by: <%= listing.owner.username %></p>
      <p class="text-muted"><%= listing.description %></p>
      <p class="fw-bold fs-5 text-success">
        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <small class="fw-normal text-muted">per night</small>
      </p>
    </div>
  </div>

  <!-- Ratings Summary -->
   
  <div class="row mb-5">
    <div class="col-lg-10 offset-lg-1 d-flex align-items-center">
      <span class="fs-4 fw-bold me-3 text-dark">
        ‚≠ê 4.9
      </span>
      <span class="text-muted">(<%= listing.reviews.length %> reviews)</span>
    </div>
  </div>


  <% if (listing.reviews.length > 0) { %>
  <!-- Reviews Section -->
  <div class="row mb-5">
    <div class="col-lg-10 offset-lg-1">
      <h4 class="mb-4 text-dark">Guest Reviews</h4>
      <div class="row g-3">
        <% for (let review of listing.reviews) { %>
          <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3 h-100">
              <div class="card-body">
                <h6 class="fw-bold"><%= review.author.username %></h6>
                <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated: <%= review.rating %> stars
                </p>
                <p class="text-muted"><%= review.comment %></p>
              </div>
              <div class="card-footer bg-transparent border-0 text-end">
                <% if (currentUser && currentUser._id.equals(review.author._id)) { %>
                <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Review Form -->
   <% if (currentUser) { %>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body">
          <h4 class="text-primary mb-3">Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate>
            <div class="mb-3">
              <label class="form-label fw-semibold">Rating</label>
              
              <!-- <input type="range" min="1" max="5" name="review[rating]" class="form-range"> -->

              <fieldset class="starability-slot mb-3 ">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label fw-semibold">Comments</label>
              <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
              <div class="invalid-feedback">Please write your review</div>
            </div>
            <button class="btn btn-primary w-100">Submit Review</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% } %>

  <!-- Map Section -->
  <div class="row my-5">
    <div class="col-lg-10 offset-lg-1">
      <h4 class="mb-4 text-dark">Location</h4>
      <div id="map" style="height: 400px;" class="rounded-3 shadow-sm"></div>
    </div>
  </div>

</div>


<script src="/js/map.js"></script>
  
